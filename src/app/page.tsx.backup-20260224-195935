
// ========== SEARCH RESULTS COMPONENT ==========
const SearchResults = ({ results }: { results: any[] }) => {
  if (!results || results.length === 0) return null;
  
  return (
    <div className="space-y-3 mt-2">
      <div className="text-xs font-bold text-cyan-400 flex items-center gap-1">
        <span>🔍 SEARCH RESULTS</span>
        <span className="text-[10px] text-gray-500">({results.length} found)</span>
      </div>
      <div className="grid gap-2">
        {results.map((r, i) => (
          <a 
            key={i}
            href={r.url}
            target="_blank"
            rel="noopener noreferrer"
            className="block bg-white/5 hover:bg-white/10 border border-white/10 hover:border-cyan-500/30 rounded-lg p-3 transition-all group"
          >
            <div className="text-sm font-medium text-white group-hover:text-cyan-400 line-clamp-1">
              {r.title}
            </div>
            <div className="text-[10px] text-gray-500 mt-1 truncate">
              {r.url.replace(/^https?:\/\//, '').replace(/\/$/, '')}
            </div>
          </a>
        ))}
      </div>
    </div>
  );
};

'use client';

import { useState, useEffect } from 'react';
import { Badge } from '@/components/ui/badge';
import { Brain, Search, Loader2, Terminal, Cpu, Globe, Activity, Sparkles, RefreshCw } from 'lucide-react';
import { useCanvasStore } from '@/lib/store/canvas-store';

const DOMAINS = [
  { id: 'pc', name: 'PC', icon: Cpu, color: '#00FFFF', commands: [
    { label: 'Open Notepad', task: 'Launch notepad' },
    { label: 'Open Calculator', task: 'Launch calc' },
    { label: 'System Info', task: 'Check system status' }
  ]},
  { id: 'research', name: 'Research', icon: Globe, color: '#FF00FF', commands: [
    { label: 'Cyberpunk', task: 'cyberpunk' },
    { label: 'Sovereign AI', task: 'sovereign ai' },
    { label: 'Quantum', task: 'quantum computing' }
  ]},
  { id: 'code', name: 'Code', icon: Terminal, color: '#00FF88', commands: [
    { label: 'Fibonacci', task: 'Write a Python script for Fibonacci' },
    { label: 'Sort Files', task: 'Write a script to sort files by date' }
  ]},
  { id: 'canvas', name: 'Canvas', icon: Sparkles, color: '#FFD700', commands: [
    { label: 'Cyberpunk Samurai', task: 'Generate image of a cyberpunk samurai' },
    { label: 'Neon City', task: 'Generate image of a neon city' }
  ]}
];

function Card({ data }: { data: any }) {
  return (
    <div className="mb-4 break-inside-avoid group relative bg-white/5 rounded-lg border border-white/10 overflow-hidden hover:border-cyan-500/30 transition-colors">
      {data.image && (
        <img 
          src={data.image} 
          alt={data.title} 
          className="w-full h-48 object-cover" 
          loading="lazy" 
        />
      )}
      <div className="p-4">
        <div className="text-xs font-bold text-white truncate">{data.title}</div>
        <div className="text-[10px] text-gray-500 truncate mt-1">{data.source}</div>
        {data.url && data.url !== '#' && (
          <a 
            href={data.url} 
            target="_blank" 
            rel="noopener noreferrer"
            className="text-[10px] text-cyan-400 hover:underline mt-2 block truncate"
          >
            {data.url.replace(/^https?:\/\//, '').substring(0, 30)}...
          </a>
        )}
      </div>
    </div>
  );
}

export default function SovereignInterface() {
  const [input, setInput] = useState('');
  const [isLoading, setIsLoading] = useState(false);
  const [activeDomain, setActiveDomain] = useState('pc');
  const [logs, setLogs] = useState<string[]>(['System initializing...']);
  const [health, setHealth] = useState({ model: 'Sovereign' });
  
  const { results, images, setResults, setImages } = useCanvasStore();
  const items = [...images, ...results];

  useEffect(() => {
    const interval = setInterval(async () => {
      try {
        const res = await fetch('/api/kernel');
        const d = await res.json();
        setHealth({ model: d.kernel || 'Sovereign' });
      } catch {}
    }, 5000);
    return () => clearInterval(interval);
  }, []);

  const addLog = (msg: string) => setLogs(prev => [...prev.slice(-10), `[${new Date().toLocaleTimeString()}] ${msg}`]);

  const handleCommand = async (task: string) => {
    setInput(task);
    setIsLoading(true);
    addLog(`Exec: ${task}`);
    
    try {
      const res = await fetch('/api/kernel', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ task })
      });
      const data = await res.json();
      
      addLog(`Done: ${data.worker || 'kernel'}`);
      
      const mcp = data.result || data;
      setImages((mcp.images || []).map((img: any, i: number) => ({ 
        id: `i-${Date.now()}-${i}`, 
        title: img.title || 'Image', 
        image: img.url, 
        source: img.source || 'Web',
        url: img.source
      })));
      
      setResults((mcp.results || []).map((r: any, i: number) => ({ 
        id: `r-${Date.now()}-${i}`, 
        title: r.title || 'Result', 
        source: r.source || 'Web', 
        url: r.url || '#' 
      })));
    } catch (e: any) {
      addLog(`Error: ${e.message}`);
    } finally {
      setIsLoading(false);
    }
  };

  const domain = DOMAINS.find(d => d.id === activeDomain);

  return (
    <div className="h-screen w-screen bg-black text-white flex overflow-hidden">
      
      {/* LEFT: Control Panel */}
      <div className="w-72 border-r border-white/10 flex flex-col bg-black/90">
        <div className="p-4 border-b border-white/10 flex items-center gap-2">
          <Brain className="w-5 h-5 text-purple-400" />
          <span className="font-bold text-sm">REZ HIVE</span>
          <Badge variant="outline" className="text-[10px] ml-auto">Sovereign</Badge>
        </div>

        <div className="p-2 grid grid-cols-4 gap-1 border-b border-white/10">
          {DOMAINS.map(d => (
            <button 
              key={d.id} 
              onClick={() => setActiveDomain(d.id)} 
              className={`p-2 rounded text-center transition-colors ${
                activeDomain === d.id 
                  ? 'bg-purple-600/20 text-purple-300 border border-purple-500/30' 
                  : 'text-gray-500 hover:bg-white/5'
              }`}
            >
              <d.icon className="w-4 h-4 mx-auto mb-1" style={{ color: activeDomain === d.id ? d.color : 'inherit' }} />
              <div className="text-[10px]">{d.name}</div>
            </button>
          ))}
        </div>

        <div className="flex-1 overflow-y-auto p-3 space-y-1">
          <div className="text-[10px] text-gray-600 mb-2 tracking-wider">QUICK ACTIONS</div>
          {domain?.commands.map((cmd, i) => (
            <button 
              key={i} 
              onClick={() => handleCommand(cmd.task)} 
              className="w-full text-left p-2 text-xs bg-white/5 hover:bg-white/10 rounded border border-white/5 hover:border-purple-500/20 transition-colors"
            >
              {cmd.label}
            </button>
          ))}
        </div>

        <div className="p-3 border-t border-white/10 space-y-2 bg-black/50">
          <input 
            value={input} 
            onChange={e => setInput(e.target.value)} 
            onKeyDown={e => e.key === 'Enter' && handleCommand(input)} 
            placeholder="Custom intent..." 
            className="w-full bg-white/5 border border-white/10 rounded px-3 py-2 text-xs focus:outline-none focus:border-purple-500/50"
          />
          <button 
            onClick={() => handleCommand(input)} 
            disabled={isLoading || !input.trim()} 
            className="w-full bg-purple-600 hover:bg-purple-700 p-2 rounded text-xs disabled:opacity-50"
          >
            {isLoading ? <RefreshCw className="w-3 h-3 animate-spin mx-auto" /> : 'Execute'}
          </button>
        </div>
      </div>

      {/* CENTER: Canvas */}
      <div className="flex-1 flex flex-col overflow-hidden bg-gradient-to-br from-black via-purple-950/5 to-black">
        <div className="flex-1 overflow-y-auto p-6">
          {items.length === 0 ? (
            <div className="h-full flex items-center justify-center text-gray-600 text-center">
              <div>
                <Globe className="w-12 h-12 mx-auto mb-4 opacity-20" />
                <div className="text-sm mb-2">Canvas is empty</div>
                <div className="text-xs text-gray-700 max-w-xs">
                  Select a command from the left panel to populate the canvas
                </div>
              </div>
            </div>
          ) : (
            <div className="grid grid-cols-3 gap-4">
              {items.map((item, i) => <Card key={i} data={item} />)}
            </div>
          )}
        </div>
      </div>

      {/* RIGHT: System Monitor */}
      <div className="w-72 border-l border-white/10 bg-black/90 p-4 flex flex-col">
        <div className="flex items-center gap-2 mb-4">
          <Activity className="w-4 h-4 text-emerald-400" />
          <span className="text-xs font-bold tracking-wider">SYSTEM HEALTH</span>
        </div>
        
        <div className="space-y-3 text-xs">
          <div className="flex justify-between items-center">
            <span className="text-gray-500">Status</span>
            <span className="text-emerald-400 flex items-center gap-1">
              <span className="w-1.5 h-1.5 rounded-full bg-emerald-500 animate-pulse" />
              Online
            </span>
          </div>
          <div className="flex justify-between items-center">
            <span className="text-gray-500">Mode</span>
            <span className="text-purple-400">{health.model}</span>
          </div>
        </div>

        <div className="mt-6 flex-1 overflow-hidden flex flex-col">
          <div className="flex items-center gap-2 text-xs font-bold text-gray-500 mb-2">
            <Terminal className="w-3 h-3" />
            <span>LIVE LOG</span>
          </div>
          <div className="flex-1 bg-white/5 rounded p-3 font-mono text-[10px] text-gray-400 overflow-y-auto">
            {logs.map((log, i) => (
              <div key={i} className="mb-1.5 leading-relaxed border-l border-purple-500/20 pl-2">
                {log}
              </div>
            ))}
          </div>
        </div>

        <div className="mt-4 pt-4 border-t border-white/10 text-[8px] text-gray-700 text-center">
          O.K.I.R.U. Protocol v1.0 • Sovereign • Local
        </div>
      </div>

    </div>
  );
}


