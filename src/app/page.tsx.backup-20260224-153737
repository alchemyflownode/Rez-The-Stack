'use client';

import { useState, useEffect } from 'react';
import { Masonry } from 'masonic';
import { Badge } from '@/components/ui/badge';
import { ScrollArea } from '@/components/ui/scroll-area';
import { Brain, Search, Loader2, Terminal, Cpu, Globe, Activity } from 'lucide-react';
import { useCanvasStore } from '@/lib/store/canvas-store';

const DOMAINS = [
  { id: 'pc', name: 'PC', icon: Cpu, color: '#00FFFF', commands: [
    { label: 'Open Notepad', task: 'Launch notepad' },
    { label: 'Open Calc', task: 'Launch calc' }
  ]},
  { id: 'research', name: 'Research', icon: Globe, color: '#FF00FF', commands: [
    { label: 'Cyberpunk', task: 'cyberpunk' },
    { label: 'Sovereign AI', task: 'sovereign ai' }
  ]},
  { id: 'code', name: 'Code', icon: Terminal, color: '#00FF88', commands: [
    { label: 'Fibonacci', task: 'Write a Python script for Fibonacci' }
  ]}
];

function Card({ data }: { data: any }) {
  return (
    <div className="mb-4 break-inside-avoid group relative bg-white/5 rounded-lg border border-white/10 overflow-hidden p-3">
      <div className="text-xs font-bold text-white truncate">{data.title}</div>
      <div className="text-[10px] text-gray-500 truncate mt-1">{data.source}</div>
    </div>
  );
}

export default function SovereignInterface() {
  const [input, setInput] = useState('');
  const [isLoading, setIsLoading] = useState(false);
  const [activeDomain, setActiveDomain] = useState('pc');
  const [logs, setLogs] = useState<string[]>(['System initializing...']);
  const [health, setHealth] = useState({ cpu: '12%', mem: '4.2GB', model: 'None' });
  
  const { results, images, setResults, setImages } = useCanvasStore();
  const items = [...images, ...results];

  useEffect(() => {
    const interval = setInterval(async () => {
      try {
        const res = await fetch('/api/kernel');
        const d = await res.json();
        setHealth({ cpu: '12%', mem: '4.2GB', model: d.kernel || 'Unknown' });
      } catch {}
    }, 5000);
    return () => clearInterval(interval);
  }, []);

  const addLog = (msg: string) => setLogs(prev => [...prev.slice(-10), `[${new Date().toLocaleTimeString()}] ${msg}`]);

  const handleCommand = async (task: string) => {
    setInput(task);
    setIsLoading(true);
    addLog(`Exec: ${task}`);
    
    try {
      const res = await fetch('/api/kernel', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ task })
      });
      const data = await res.json();
      
      addLog(`Done: ${data.worker || 'kernel'}`);
      
      const mcp = data.result || data;
      setImages((mcp.images || []).map((img: any, i: number) => ({ id: `i${i}`, title: img.title, image: img.url, source: 'Wiki' })));
      setResults((mcp.results || []).map((r: any, i: number) => ({ id: `r${i}`, title: r.title, source: r.source, url: r.url })));
    } catch (e: any) {
      addLog(`Error: ${e.message}`);
    } finally {
      setIsLoading(false);
    }
  };

  const domain = DOMAINS.find(d => d.id === activeDomain);

  return (
    <div className="h-screen w-screen bg-black text-white flex overflow-hidden">
      
      {/* LEFT: Control Panel */}
      <div className="w-72 border-r border-white/10 flex flex-col bg-black/90">
        <div className="p-4 border-b border-white/10 flex items-center gap-2">
          <Brain className="w-5 h-5 text-purple-400" />
          <span className="font-bold text-sm">REZ HIVE</span>
          <Badge variant="outline" className="text-[10px] ml-auto">Crystalline</Badge>
        </div>

        <div className="p-2 grid grid-cols-3 gap-1 border-b border-white/10">
          {DOMAINS.map(d => (
            <button key={d.id} onClick={() => setActiveDomain(d.id)} className={`p-2 rounded text-center ${activeDomain === d.id ? 'bg-purple-600/20 text-purple-300' : 'text-gray-500 hover:bg-white/5'}`}>
              <d.icon className="w-4 h-4 mx-auto mb-1" style={{ color: activeDomain === d.id ? d.color : 'inherit' }} />
              <div className="text-[10px]">{d.name}</div>
            </button>
          ))}
        </div>

        <div className="flex-1 overflow-y-auto p-3 space-y-1">
          {domain?.commands.map((cmd, i) => (
            <button key={i} onClick={() => handleCommand(cmd.task)} className="w-full text-left p-2 text-xs bg-white/5 hover:bg-white/10 rounded border border-white/5 hover:border-purple-500/20 transition-colors">
              {cmd.label}
            </button>
          ))}
        </div>

        <div className="p-3 border-t border-white/10 space-y-2">
          <input value={input} onChange={e => setInput(e.target.value)} onKeyDown={e => e.key === 'Enter' && handleCommand(input)} placeholder="Custom intent..." className="w-full bg-white/5 border border-white/10 rounded p-2 text-xs" />
          <button onClick={() => handleCommand(input)} disabled={isLoading} className="w-full bg-purple-600 hover:bg-purple-700 p-2 rounded text-xs disabled:opacity-50">
            {isLoading ? 'Running...' : 'Execute'}
          </button>
        </div>
      </div>

      {/* CENTER: Canvas */}
      <div className="flex-1 flex flex-col overflow-hidden">
        <div className="flex-1 overflow-y-auto p-4 bg-gradient-to-br from-black via-purple-950/10 to-black">
          {items.length === 0 ? (
            <div className="h-full flex items-center justify-center text-gray-600 text-center">
              <div>
                <Globe className="w-8 h-8 mx-auto mb-4 opacity-20" />
                <div className="text-sm">Select a command</div>
              </div>
            </div>
          ) : (
            <Masonry items={items} render={Card} columnGutter={16} columnWidth={200} itemKey={(item: any) => item.id} />
          )}
        </div>
      </div>

      {/* RIGHT: Health Monitor */}
      <div className="w-64 border-l border-white/10 bg-black/90 p-4 flex flex-col">
        <div className="flex items-center gap-2 mb-4">
          <Activity className="w-4 h-4 text-green-400" />
          <span className="text-xs font-bold">SYSTEM HEALTH</span>
        </div>
        
        <div className="space-y-3 text-xs">
          <div className="flex justify-between items-center">
            <span className="text-gray-500">Status</span>
            <span className="text-green-400">Online</span>
          </div>
          <div className="flex justify-between items-center">
            <span className="text-gray-500">Mode</span>
            <span className="text-purple-400">{health.model}</span>
          </div>
        </div>

        <div className="mt-6 flex-1 overflow-hidden flex flex-col">
          <div className="text-xs font-bold text-gray-500 mb-2">LIVE LOG</div>
          <ScrollArea className="flex-1 bg-white/5 rounded p-2 font-mono text-[10px] text-gray-400">
            {logs.map((l, i) => <div key={i} className="mb-1">{l}</div>)}
          </ScrollArea>
        </div>

      </div>

    </div>
  );
}
